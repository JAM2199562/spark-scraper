# Spark Scraper 配置文件
# 复制此文件为 .env 并根据需要修改配置

# 监控间隔时间（分钟）
CHECK_INTERVAL_MINUTES=5

# 监控的网页URL
MONITOR_URL=https://regtest.luminex.pages.dev/spark/pulse

# API URL  
API_URL=https://brc20-api.luminex.io/regtest/spark/pulse

# 浏览器是否隐藏窗口 (true/false)
# false = 显示浏览器窗口（便于调试）
# true = 隐藏浏览器窗口（后台运行）
BROWSER_HEADLESS=false

# 时区偏移（小时）
TIMEZONE_OFFSET_HOURS=8

# Bark推送配置
# Bark服务器端点，例如: https://api.day.app/your_device_key
BARK_ENDPOINT=https://x.y.z/apikey/
# 首次启动时是否推送消息（true/false）
BARK_PUSH_ON_STARTUP=true